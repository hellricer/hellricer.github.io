---
---
[
	{% for post in site.posts %}
		{
		  "title"      : "{{ post.title | e }}",
		  "category"   : "{{ post.category }}",
		  "url"        : "{{ site.url }}{{ post.url }}",
		  "date"       : "{{ post.date }}",
		  "shortdate"  : "{{ post.date.strftime('%B %d, %Y') }}"
		} {% if loop.last %}{% else %},{% endif %}
	{% endfor %}
]
